{# templates/index.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}

  <div class="d-flex align-items-center justify-content-center h-100 my-auto">

    <div id="content" class="content w-25 login-form">


      <form action="{{ path('login') }}" method="post" class="mx-4 mt-2">
        <div class="mb-3">
          <label for="username" class="form-label">Username : </label>
          <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
        </div>

        <div class="pb-3">
          <label for="password" class="form-label">Password : </label>
          <input type="password" id="password" name="_password" class="form-control"/>
        </div>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <button type="submit" class="btn btn-primary">login</button>

        {% if error %}
          <div class="my-4">
            <p class="text-danger">
              <span class="fa-solid fa-exclamation-triangle"></span>
              {{ error.messageKey|trans(error.messageData, 'security') }}
            </p>
          </div>
        {% endif %}
      </form>

    </div>
  </div>
{% endblock %}
